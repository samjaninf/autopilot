(config) {
	header Server "Sitepilot"
}

(webapps) {
	route /.sitepilot/pma* {
		uri strip_prefix /.sitepilot/pma
		reverse_proxy http://127.0.0.1:9001
	}

    reverse_proxy /.sitepilot/node-exporter* http://127.0.0.1:9100
}

:80 {
    import config

    reverse_proxy {
        to 127.0.0.1:7081
        header_down -Server
    }
}

{{ hostname }}:443 {
	tls {{ tls_email }} {
        on_demand
    }

    import config 

    import webapps

	reverse_proxy {
        to 127.0.0.1:7082
        header_down -Server

        transport http {
            tls_insecure_skip_verify
        }
    }
}

import /opt/sitepilot/services/caddy/vhosts/*